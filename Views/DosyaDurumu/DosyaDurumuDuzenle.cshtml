@model DosyaDurumu

@{
    ViewData["Title"] = "Dosya Durumu Düzenle";
}



@section Styles{
    <link href="~/css/muvekkil.css" rel="stylesheet" />
}

<div class="muvekkilWrapper">
    <div class="muvekkilEkleHeader">
        <label class="muvekkilEkleHeaderTitle">Dosya Durumu Düzenle</label>
    </div>
    <div class="muvekkilEkleContent">
        <form asp-controller="DosyaDurumu" asp-action="DosyaDurumuDuzenle" method="post">
            <div class="muvekkilEkleContentRow1">
                <div class="form-group">
                    <label asp-for="dosyaDurumuTuru" class="control-label"></label>
                    <input asp-for="dosyaDurumuTuru" class="form-control" />
                    <span asp-validation-for="dosyaDurumuTuru" class="text-danger"></span>
                </div>
                <div class="muvekkilEkleContentRow5">
                    <button class="btn btn-primary ">Düzenle</button>
                    <button asp-controller="Ayarlar" asp-action="YoneticiAyarlariListele" class="btn btn-danger">İptal</button>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="dosyaDurumuId" />
                </div>
            </div>
        </form>
    </div>
</div>