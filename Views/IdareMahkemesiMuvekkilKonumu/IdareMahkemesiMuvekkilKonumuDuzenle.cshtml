@model IdareMahkemesiMuvekkilKonumu

@{
    ViewData["Title"] = "İdare Mahkemesi Muvekkil Konumu Düzenle";
}



@section Styles{
    <link href="~/css/muvekkil.css" rel="stylesheet" />
    <style>
        .headerBackButton {
            transition: 175ms all ease-in-out;
        }

        .headerBackButton:hover {
            font-size: 16px;
        }
    </style>
}

<div class="muvekkilWrapper">
    <div class="muvekkilEkleHeader">
        <a asp-controller="Ayarlar" asp-action="YoneticiAyarlariListele" style="margin-right:15px; color:#333;" class="headerBackButton"><i class="fas fa-chevron-left ki"></i></a>
        <label class="muvekkilEkleHeaderTitle">İdare Mahkemesi Müvekkil Konumu Düzenle</label>
    </div>
    <div class="muvekkilEkleContent">
        <form asp-controller="IdareMahkemesiMuvekkilKonumu" asp-action="IdareMahkemesiMuvekkilKonumuDuzenle" method="post">
            <div class="muvekkilEkleContentRow1">
                <div class="form-group">
                    <label asp-for="idareMahkemesiMuvekkilKonumuTuru" class="control-label"></label>
                    <input asp-for="idareMahkemesiMuvekkilKonumuTuru" class="form-control" />
                    <span asp-validation-for="idareMahkemesiMuvekkilKonumuTuru" class="text-danger"></span>
                </div>
                <div class="muvekkilEkleContentRow5">
                    <button class="btn btn-primary ">Düzenle</button>
                    <button asp-controller="Ayarlar" asp-action="YoneticiAyarlariListele" class="btn btn-danger">İptal</button>
                </div>
                <input type="hidden" asp-for="idareMahkemesiMuvekkilKonumuId" />
            </div>
        </form>
    </div>
</div>
