@model EditRoleViewModel
@{
    ViewData["Title"] = "Rol Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rol Düzenle</h1>


<form method="post" class="mt-3">
    <div class="form-group" row>
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group" row>
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Rol İsmi</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="ListRoles" class="btn btn-primary">İptal</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var item in Model.Users)
                {
                    <h5 class="card-title">@item</h5>
                }
            }
            else
            {
                <h5 class="card-title">Kullanıcı yok.</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration"
               asp-route-roleId="@Model.Id" class="btn btn-primary">Kullanıcı Ekle veya Çıkar</a>
        </div>
    </div>
</form>


