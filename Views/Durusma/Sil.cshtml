@model Durusma

@{
    ViewData["Title"] = "Delete";
}


@section Styles{
    <link href="~/css/muvekkil.css" rel="stylesheet" />
    <style>
        .headerBackButton {
            transition: 175ms all ease-in-out;
        }

            .headerBackButton:hover {
                font-size: 16px;
            }
    </style>
}

<h3 class="muvekkilSilH3">Duruşma Silmek İstediğinize Emin Misiniz?</h3>

<div class="muvekkilWrapper">
    <div class="muvekkilEkleHeader">
        <a asp-controller="Muvekkil" asp-action="Listele" style="margin-right:15px; color:#333;" class="headerBackButton"><i class="fas fa-chevron-left ki"></i></a>
        <img src="~/pictures/lawsuit/lawsuit.svg" width="45" height="45" />
        <label class="muvekkilEkleHeaderTitle">Duruşma Sil</label>
    </div>
    <div class="muvekkilListeleContent muvekkilDetayContent" style="padding:0;">
        <div class="muvekkilListeleContentRow2Col1">
            <dl class="row">
                <dt class="col-sm-2">
                    Dosya
                </dt>
                <dd class="col-sm-10">
                    @await DntHukuk.Web.Controllers.DurusmaController.DosyaIdToName(Model.DosyaId)
                </dd>
            </dl>
        </div>
    </div>

    <div class="muvekkilListeleContentRow2">
        <div class="muvekkilListeleContentRow2Col1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DurusmaTuruId)
                </dt>
                <dd class="col-sm-10">
                    @await DntHukuk.Web.Controllers.DurusmaController.DurusmaTuruIdToName(Model.DurusmaTuruId)
                </dd>
            </dl>
        </div>
    </div>

    <div class="muvekkilListeleContentRow2">
        <div class="muvekkilListeleContentRow2Col1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DurusmaAdi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DurusmaAdi)
                </dd>
            </dl>
        </div>
    </div>

    <div class="muvekkilListeleContentRow2">
        <div class="muvekkilListeleContentRow2Col1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MahkemeAciklama)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MahkemeAciklama)
                </dd>
            </dl>
        </div>
    </div>

    <div class="muvekkilListeleContentRow2">
        <div class="muvekkilListeleContentRow2Col1">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DurusmaTarihi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DurusmaTarihi)
                </dd>
            </dl>
        </div>
    </div>
    <div class="muvekkilSilFooter" style="display: flex;align-items: center;flex-direction: row;">
        <div class="muvekkilSilFooterCol1">
            <a asp-controller="Durusma" asp-action="Listele"><i class="fas fa-arrow-left"></i> <span>Geri Dön</span></a>
        </div>
        <div class="muvekkilSilFooterCol2">
            <form asp-controller="Durusma" asp-action="Sil">
                <input type="submit" value="Sil" class="btn btn-danger" style="width:100px;margin-left:25px;"/>
            </form>
        </div>
    </div>
</div>