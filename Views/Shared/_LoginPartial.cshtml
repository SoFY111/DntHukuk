@using Microsoft.AspNetCore.Identity
@using DntHukuk.Web.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <a asp-controller="Home" asp-action="Index" title="Ana Sayfa">Ana Sayfa</a>
        <a id="manage"asp-area="Identity" asp-page="/Account/Manage/Index" title="Profile Git">@UserManager.GetUserName(User)</a>
        <button id="logout" type="submit" class="" title="Çıkış Yap">Çıkış Yap</button>
    </form>
}
