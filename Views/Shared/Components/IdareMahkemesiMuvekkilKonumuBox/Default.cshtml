@model IEnumerable<IdareMahkemesiMuvekkilKonumu>

@section Styles{
    <link href="~/css/muvekkil.css" rel="stylesheet" />
}

<div class="muvekkilWrapper yoneticiAyarlariListeleBox">
    <div class="muvekkilEkleHeader muvekkilListeleHeader icraHukukuMuvekkilKonumuHeader">
        <label class="muvekkilEkleHeaderTitle">İdare Mahkemesi Müvekkil Konumu</label>
        <div class="icraHukukuMuvekkilKonumuHeaderButtons">
            <a asp-controller="IdareMahkemesiMuvekkilKonumu" asp-action="IdareMahkemesiMuvekkilKonumuEkle" title="Ekle"><i class="fas fa-plus i"></i></a>
        </div>
    </div>
    <div class="icraHukukuMuvekkilKonumu muvekkilListeleContent">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.idareMahkemesiMuvekkilKonumuTuru)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idareMahkemesiMuvekkilKonumuTuru)
                        </td>
                        <td style="width:70px;">
                            <a asp-controller="IdareMahkemesiMuvekkilKonumu" asp-action="IdareMahkemesiMuvekkilKonumuDuzenle" asp-route-id="@item.idareMahkemesiMuvekkilKonumuId" title="Duzenle"><i class="far fa-edit i"></i></a>
                            <a asp-controller="IdareMahkemesiMuvekkilKonumu" asp-action="IdareMahkemesiMuvekkilKonumuSil" asp-route-id="@item.idareMahkemesiMuvekkilKonumuId" title="Sil"><i class="far fa-trash-alt i"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>