@model IEnumerable<IcraHukukuMuvekkilKonumu>

@{
    var seciliMuvekkilKonumuId = ViewBag.muvekkilKonumuId;
}

@if (seciliMuvekkilKonumuId != null)
{
    <select class="muvekkilKonumuDropDown" name="muvekkilKonumuDropDown" readonly>
        @foreach (var item in Model)
        {
            if (item.Id == seciliMuvekkilKonumuId)
            {
                <option value="@item.Id" selected>@item.IcraHukukMuvekkilKonumu</option>
            }
            else
            {
    <option value="@item.Id">@item.IcraHukukMuvekkilKonumu</option>
            }
        }
    </select>
}
else
{
    <select class="muvekkilKonumuDropDown" name="muvekkilKonumuDropDown">
        @foreach (var item in Model)
        {
        <option value="@item.Id">@item.IcraHukukMuvekkilKonumu</option>
        }
    </select>
}