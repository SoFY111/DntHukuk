@using Microsoft.AspNetCore.Identity
@using DntHukuk.Web.Areas.Identity.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignManager

@{ 
    var user = await UserManager.GetUserAsync(User);
    var userImgPath = ((user.userImagePath != "") ? user.userImagePath : null) ?? "blank-profile.png";
}

<div class="sideBarContainer">
    <div class="sideBarWrapper">
        <img src="~/userUploadedFile/@userImgPath" width="100" height="100" />
        <label class="userNameLabel">Hakan DİNÇTÜRK</label>
        <div class="sideBarMenu">
            <ul>
                <li>
                    <a>Müvekkiller <i class="fas fa-chevron-down ki"></i></a>
                    <div class="subMenu">
                        <a asp-controller="Muvekkil" asp-action="Ekle" class="subMenuItem">Müvekkil Ekle</a>
                        <a asp-controller="Muvekkil" asp-action="Listele" class="subMenuItem">Müvekkil Listesi</a>
                    </div>
                </li>

                <li>
                    <a>Dosyalar <i class="fas fa-chevron-down ki"></i></a>
                    <div class="subMenu">
                        <a asp-controller="DosyaTuruSec" asp-action="Index" class="subMenuItem">Dosya Ekle</a>
                        <a asp-controller="Dosyalar" asp-action="Listele" class="subMenuItem">Dosya Listesi</a>
                    </div>
                </li>

                <li>
                    <a>Duruşmalar <i class="fas fa-chevron-down ki"></i></a>
                    <div class="subMenu">
                        <a asp-controller="Durusma" asp-action="Ekle" class="subMenuItem">Duruşma Ekle</a>
                        <a asp-controller="Durusma" asp-action="Listele" class="subMenuItem">Duruşma Listesi</a>
                    </div>
                </li>
                <li>
                    <a>Ayarlar</a>
                    <div class="subMenu">
                        <a asp-controller="Ayarlar" asp-action="YoneticiAyarlariListele" class="subMenuItem">Yönetici Ayarları</a>
                        <a asp-controller="Ayarlar" asp-action="PersonelListesi" class="subMenuItem">Personel Listesi</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>