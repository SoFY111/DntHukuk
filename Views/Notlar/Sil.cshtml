@model DntHukuk.Web.Models.Notlar

@{
    ViewData["Title"] = "Delete";
}



@section Styles{
    <link href="~/css/muvekkil.css" rel="stylesheet" />
    <style>
        .headerBackButton {
            transition: 175ms all ease-in-out;
        }

            .headerBackButton:hover {
                font-size: 16px;
            }
    </style>
}

<h3 class="muvekkilSilH3">İdare Mahkemesi Müvekkil Konumunu Silmek İstediğinize Emin Misiniz?</h3>
<div class="muvekkilWrapper">
    <div class="muvekkilEkleHeader">
        <a asp-controller="Home" asp-action="Index" style="margin-right:15px; color:#333;" class="headerBackButton"><i class="fas fa-chevron-left ki"></i></a>
        <label class="muvekkilEkleHeaderTitle">Not Sil</label>
    </div>
    <div class="muvekkilEkleContent">
        <form asp-controller="Notlar" asp-action="Sil" method="post">
            <div class="muvekkilEkleContentRow1">
                <div class="form-group">
                    <input type="hidden" asp-for="notId" />
                    <label asp-for="Not" class="control-label" readonly></label>
                    <input asp-for="Not" class="form-control" readonly />
                    <span asp-validation-for="Not" class="text-danger" readonly></span>
                </div>
                <div class="muvekkilEkleContentRow5">
                    <button class="btn btn-primary ">Sil</button>
                    <button asp-controller="Home" asp-action="Index" class="btn btn-danger">İptal</button>
                </div>
            </div>
        </form>
    </div>
</div>
